#!/usr/bin/env bash
set -e

BUILD_DIR=$1
CACHE_DIR=$2

echo "-----> Installing Graphviz"

# Pick a version
# https://archive.ubuntu.com/ubuntu/pool/universe/g/graphviz/graphviz_2.42.4-3build2_amd64.deb
GRAPHVIZ_VERSION=2.42.4-3build2
DEB_FILE=graphviz_${GRAPHVIZ_VERSION}_amd64.deb
DEB_URL=http://archive.ubuntu.com/ubuntu/pool/universe/g/graphviz/$DEB_FILE

curl -L -o /tmp/$DEB_FILE $DEB_URL

mkdir -p $BUILD_DIR/vendor/graphviz
dpkg -x /tmp/$DEB_FILE $BUILD_DIR/vendor/graphviz

echo "-----> Graphviz installed"